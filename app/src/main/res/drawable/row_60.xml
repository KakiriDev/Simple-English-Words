<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#7f9f5f" />
            <stroke
                android:width="1dp"
                android:color="#7f9f4f"

                android:startColor="#7f9f5f"
                android:endColor="#7f9f4f"
                
                />
            <corners
                android:radius="3dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#7f9f5f"
                android:endColor="#7f9f4f"
            />
            <stroke
                android:width="1dp"
                android:color="#7f9f4f" />
            <corners
                android:radius="3dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
</selector>