<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Statistic.Statistic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/toolbar_tab"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="18dp"
            android:paddingRight="12dp"
            android:paddingBottom="22dp">

            <ImageView
                android:id="@+id/iv_tab_buttonBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/arrow"
                android:paddingLeft="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_tab_witaj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Kamil GÅ‚owacki"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_tab_pkt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="right|center_vertical"
                android:paddingRight="12dp"
                android:text="0 Pkt"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
    <TextView
        android:id="@+id/totalWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:paddingVertical="20dp"
        android:paddingLeft="30dp"
        android:text="Total Words"/>

    <TextView
        android:id="@+id/knownWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:paddingVertical="20dp"
        android:paddingLeft="30dp"
        android:text="Known Words"/>

    <TextView
        android:id="@+id/unknownWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:paddingVertical="20dp"
        android:paddingLeft="30dp"
        android:text="Unknown Words"/>

    <TextView
        android:id="@+id/knownPercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:paddingVertical="20dp"
        android:paddingLeft="30dp"
        android:text="Known Percent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>