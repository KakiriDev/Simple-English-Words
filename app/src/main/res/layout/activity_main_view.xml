<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="20dp"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kakiridev.simpleenglishwords.MainView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">



        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Witaj" />

        <TextView
            android:id="@+id/words_Count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Liczba słów w bazie" />

        <Button
            android:id="@+id/btn_show_wordslist"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Show Words List" />

        <Button
            android:id="@+id/btn_add_word"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add New Word" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/randWords"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rand"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Statistic" />
    </LinearLayout>




</LinearLayout>
